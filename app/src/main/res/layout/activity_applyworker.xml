<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
android:background="@drawable/backimagesupdownnew"
    tools:context=".applyworker">
    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="APPLICATION"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Spinner
        android:layout_marginTop="27dp"
        android:id="@+id/panchayatname"
        android:layout_width="398dp"
        android:layout_height="45dp"
        android:layout_below="@+id/heading"
        />


    <TextView
        android:id="@+id/name_worker"
        android:layout_width="96dp"
        android:layout_height="47dp"
        android:layout_below="@+id/heading"
        android:layout_marginTop="96dp"
        android:text=" Name"
        android:textColor="#0E0E0E"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/edit_name"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="96dp"
        android:layout_marginRight="9dp"
        android:layout_toRightOf="@+id/name_worker" />

    <TextView
        android:id="@+id/addrs_worker"
        android:layout_width="86dp"
        android:layout_height="39dp"
        android:layout_below="@+id/name_worker"
        android:layout_marginTop="20dp"
        android:text=" Address"
        android:textColor="#0E0E0E"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/edit_address"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_name"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="7dp"
        android:layout_toRightOf="@+id/addrs_worker"
        android:inputType="textPostalAddress" />

    <TextView
        android:id="@+id/adhar_worker"
        android:layout_width="93dp"
        android:layout_height="44dp"
        android:layout_below="@+id/addrs_worker"
        android:layout_marginTop="20dp"
        android:text=" Adhar"
        android:textColor="#0E0E0E"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edit_adhar"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_address"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="3dp"
        android:layout_toRightOf="@+id/adhar_worker"
        android:inputType="textPostalAddress" />

    <TextView
        android:id="@+id/adharpic_worker"
        android:layout_width="93dp"
        android:layout_height="44dp"
        android:layout_below="@+id/adhar_worker"
        android:layout_marginTop="20dp"
        android:text=" Adhar"
        android:textColor="#0E0E0E"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/adharpictextview"
        android:layout_width="165dp"
        android:layout_height="38dp"
        android:layout_below="@+id/edit_adhar"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"

        android:layout_toRightOf="@+id/adharpic_worker"
        android:background="@color/white"
        android:text="   CHOOSE IMAGE"
        android:textColor="#0E0E0E"
        android:textSize="18sp" />



    <TextView
        android:id="@+id/bank_worker"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_below="@+id/adharpic_worker"
        android:layout_marginTop="25dp"
        android:text=" BankAcNo"
        android:textColor="#0E0E0E"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edit_bank"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adharpictextview"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@+id/bank_worker" />

    <Button
        android:id="@+id/apply"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bank_worker"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="25dp"
        android:text="Apply"
        android:textColor="@color/black"
        app:backgroundTint="@color/white" />

    <TextView
        android:id="@+id/applystatus"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/edit_bank"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/apply" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnavigationview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_marginBottom="1dp"
        android:background="@color/white"
        app:menu="@menu/bottom_menu"
      />

</RelativeLayout>