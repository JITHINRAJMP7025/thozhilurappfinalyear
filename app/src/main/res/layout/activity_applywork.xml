<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backimagesupdownnew"
    tools:context=".applywork">

    <TextView
        android:id="@+id/heading"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="34dp"
        android:text=" WORK APPLY"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cardno"
        android:layout_width="89dp"
        android:layout_height="36dp"
        android:layout_below="@+id/heading"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="103dp"
        android:text="CardNo:"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editcard"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="29dp"
        android:layout_toRightOf="@+id/cardno" />

    <TextView
        android:id="@+id/name"
        android:layout_width="89dp"
        android:layout_height="36dp"
        android:layout_below="@+id/cardno"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="30dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editname"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editcard"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="21dp"
        android:layout_toRightOf="@+id/name" />


    <TextView
        android:id="@+id/mobile"
        android:layout_width="89dp"
        android:layout_height="36dp"
        android:layout_below="@+id/name"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="30dp"
        android:text="Mobile"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editmobile"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editname"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="21dp"
        android:layout_toEndOf="@+id/mobile"
        android:layout_toRightOf="@+id/mobile" />

    <TextView
        android:id="@+id/landtax"
        android:layout_width="89dp"
        android:layout_height="36dp"
        android:layout_below="@+id/mobile"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="30dp"
        android:text="LandTax"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/picbutton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@+id/editmobile"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="28dp"
        android:layout_toRightOf="@+id/landtax"
        android:background="@drawable/shape_login_button"
        android:text="choose image"
        android:textColor="@color/black"
        app:backgroundTint="@null" />


    <Button
        android:id="@+id/applybutton"
        android:layout_width="412dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/picbutton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/shape_login_button"
        android:text="APPLY"
        android:textColor="@color/black"
        app:backgroundTint="@null"
        tools:text="APPLY" />

    <TextView
        android:id="@+id/applyverify"
        android:layout_width="145dp"
        android:layout_height="40dp"
        android:layout_below="@+id/applybutton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="253dp"
        android:layout_marginLeft="253dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="13dp"
        android:background="@color/white"
        android:textColor="@color/black" />


</RelativeLayout>