<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backimagesupdownnew"
    tools:context=".userprofile">

    <androidx.cardview.widget.CardView
        android:id="@+id/myCardView"
        android:layout_width="96dp"
        android:layout_height="98dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/jithinpic"
        app:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/roundedimage"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:background="@drawable/ic_baseline_person_24"
            android:scaleType="centerCrop"
            tools:layout_editor_absoluteX="132dp"
            tools:layout_editor_absoluteY="170dp" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/chooseimage"
        android:layout_width="95dp"
        android:layout_height="39dp"
        android:layout_below="@id/myCardView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="-4dp"
        android:layout_marginRight="37dp"
        android:text="    Choose"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/upload"
        android:layout_width="95dp"
        android:layout_height="39dp"
        android:layout_below="@id/myCardView"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-6dp"
        android:layout_marginRight="59dp"
        android:text="    Upload"
        android:textColor="@color/black"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/name"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/myCardView"
        android:layout_marginTop="75dp"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:text="Name"
        android:textColor="#070707"
        android:textSize="30dp" />

    <TextView

        android:id="@+id/displayname"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/name"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="11dp"
        android:layout_toRightOf="@id/name"
        android:textColor="#070707"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/mob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginTop="22dp"
        android:drawableLeft="@drawable/ic_baseline_phone_android_24"
        android:text="Mobile"
        android:textColor="#070707"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/displaymob"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/name"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="66dp"
        android:layout_marginRight="11dp"
        android:layout_toRightOf="@id/name"
        android:textColor="#070707"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/card"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mob"
        android:layout_marginTop="19dp"
        android:drawableLeft="@drawable/ic_outline_book_24"
        android:text="Card"
        android:textColor="#070707"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/displaycard"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/name"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="121dp"
        android:layout_marginRight="11dp"
        android:layout_toRightOf="@id/name"
        android:textColor="#070707"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/logouttext"
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:layout_below="@+id/displaycard"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="118dp"
        android:layout_marginLeft="118dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="117dp"
        android:layout_marginRight="117dp"
        android:layout_marginBottom="5dp"
        android:text="Logout" android:textColor="@color/white"
        android:textSize="18sp" android:textAlignment="center" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnavigationview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/bottom_menu"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>